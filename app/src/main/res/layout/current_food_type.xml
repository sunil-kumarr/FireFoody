<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    app:cardElevation="5dp"
    android:layout_margin="20dp"
    app:cardCornerRadius="10dp"
   android:id="@+id/CurrentMenuItem"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/food_image"
            android:layout_width="50dp"
            android:src="@drawable/ic_lunch"
            android:layout_margin="5dp"
            app:civ_border_width="1dp"
            app:civ_border_color="@color/black"
            app:civ_border_overlay="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/food_type"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Lunch"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/food_image"/>
        <TextView
            android:id="@+id/food_timings"
            android:layout_width="0dp"
            android:padding="4dp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/grey_800"
            android:textStyle="normal"
            android:text="From: 10:00AM to 04:00PM"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/food_type"
            app:layout_constraintStart_toEndOf="@id/food_image"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_800"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="1dp"
            app:layout_constraintTop_toBottomOf="@id/food_timings"
            />
        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/food_image_showcase"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/ic_undraw_together_eat"
            android:background="@color/grey_200"
            app:layout_constraintTop_toBottomOf="@id/food_timings"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
