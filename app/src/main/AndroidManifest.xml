<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rapidfood">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/man"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activites.VendorCreateSubscription"
            android:parentActivityName=".Activites.VendorAddSubscription"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activites.VendorAddSubscription"
            android:parentActivityName=".Activites.VendorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activites.VendorActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activites.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.LogoActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activites.MainScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activites.ProfileActivity"
            android:parentActivityName=".Activites.MainActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activites.VendorAddMenu"
            android:parentActivityName=".Activites.VendorActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".Activites.SubscriptionActivity" />
        <activity android:name=".Activites.VendorCreatePackage" />
        <activity android:name=".Activites.Authentication" />
        <activity android:name=".Activites.VendorCreateMenuItem" />

    </application>

</manifest>